	systemctl hibernate

#xwinrap
ctrl + alt + x
	xwinwrap -g 2300x1400 -ov -- mpv -wid WID -loop ~/Videos/code.mp4

ctrl + alt + z
	killall xwinwrap
#volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +2%

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -2%

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
#brightness
XF86MonBrightnessDown
	xbacklight -dec 5
XF86MonBrightnessUp
	xbacklight -inc 5


